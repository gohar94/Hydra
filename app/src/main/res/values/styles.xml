<resources>

    <style name="splashScreenTheme"
        parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@mipmap/splash_screen</item>
    </style>

        <!-- Base application theme. -->
        <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
            <item name="actionBarStyle">@style/ActionBar.Solid.Hydra</item>
        </style>

        <style name="ForecastTheme" parent="AppTheme">
            <item name="actionBarStyle">@style/ActionBar.Solid.Hydra.NoTitle</item>
        </style>

        <style name="ActionBar.Solid.Hydra"
            parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
            <item name="background">@color/HydraActionBar</item>
        </style>

        <style name="ActionBar.Solid.Hydra.NoTitle" parent="@style/ActionBar.Solid.Hydra">
            <item name="displayOptions">useLogo|showHome</item>
            <item name="logo">@drawable/ic_logo</item>
        </style>

        <style name="ForecastListStyle">
            <!-- Here it's a stub.  In screens of sufficient width, this style includes modifications
            for two-pane layout -->
        </style>


</resources>
